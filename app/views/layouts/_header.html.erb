<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("views.layouts.shample"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("views.layouts.Home"), root_path %></li>
        <li><%= link_to t("views.layouts.Help"), helf_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("views.layouts.users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("views.layouts.Profile"), current_user %></li>
              <li><%= link_to t("views.layouts.Settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("views.layouts.Logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("views.layouts.Login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
